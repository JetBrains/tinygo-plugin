<idea-plugin>
    <id>org.jetbrains.tinygoplugin</id>
    <name>TinyGo</name>
    <vendor>JetBrains</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <!-- Requires the Go plugin -->
    <depends>org.jetbrains.plugins.go</depends>


    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable parentId="tools" instance="org.jetbrains.tinygoplugin.services.TinyGoSettingsService"
                                 id="org.jetbrains.tinygoplugin.services.TinyGoSettingsService"
                                 displayName="TinyGo"/>
        <applicationService serviceImplementation="org.jetbrains.tinygoplugin.TinyGoPluginConfiguration"/>
    </extensions>

</idea-plugin>
