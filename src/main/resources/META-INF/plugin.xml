<idea-plugin>
    <id>org.jetbrains.tinygoplugin</id>
    <name>TinyGo</name>
    <vendor>JetBrains</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <!-- Requires the Go plugin -->
    <depends>org.jetbrains.plugins.go</depends>


    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable parentId="go" instance="org.jetbrains.tinygoplugin.services.TinyGoSettingsService"
                             id="org.jetbrains.tinygoplugin.services.TinyGoSettingsService"
                             displayName="TinyGo"/>
        <configurationType implementation="org.jetbrains.tinygoplugin.runconfig.TinyGoRunConfigurationType"/>
        <directoryProjectGenerator implementation="org.jetbrains.tinygoplugin.project.wizard.TinyGoProjectGenerator"/>
        <localInspection language="go" groupPath="Go"
                         groupBundle="messages.InspectionsBundle" groupKey="inspection.general.tools.group.name"
                         enabledByDefault="true" level="NON_SWITCHABLE_ERROR"
                         implementationClass="org.jetbrains.tinygoplugin.inspections.libraries.ImportInspection" displayName="TinyGo filter"/>
    </extensions>

    <extensions defaultExtensionNs="com.goide">
        <rootsProvider id="default" implementation="org.jetbrains.tinygoplugin.services.TinyGoGopathManager"/>
    </extensions>

</idea-plugin>
